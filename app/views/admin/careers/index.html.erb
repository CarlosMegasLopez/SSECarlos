<p id="notice"><%= notice %></p>

<h1>Formulario Carreras</h1>

<%= link_to "Nueva Carrera", new_admin_career_path, :class => 'btn btn-mini btn-success' %>

<% if @carreras.blank? %>
	<p style="color:red">No hay elementos en la base de datos </p>
<% else %>
	<p style="color:blue">Hay elementos en la base de datos</p>

					<table class="careerstable table table-hover table-striped">
						<thead>
							<tr>
						        <th>ID</th>
								<th>Descripción</th>
								<th>Opciones</th>
							</tr>
						</thead>
					</tbody>
						<% @carreras.each do |e| %>
						<tr>
					        <td><%= e.id %></td>
							<td><%= e.descripcion %></td>
							<td><%= link_to "Mostrar", admin_career_path(e), :class => 'btn btn-mini btn-info' %>
							<%= link_to "Editar", edit_admin_career_path(e), :class => 'btn btn-mini btn-primary' %>
							<%= link_to "Eliminar", admin_career_path(e), :class => 'btn btn-mini btn-danger', method: :delete, data: { confirm: '¿Eliminar Elemento?' } %></td>

							<!-- para ver el path de editar, mostrar o eliminar, hacer rake routes en la consola -->
						</tr>
				<% end %>
			</tbody>
		</table>
<% end %>


