<div class="col-sm-3"></div>

<div class="col-sm-6">
  
<%= render "utilidades/errores", current_model: @graduate %>

  <%= form_for(['admin', @graduate], html: {class: 'form-horizontal'}) do |f| %>

  <div class="form-group">
    <%= f.label :Carrera, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10" >
      <%= f.select :career_id, Career.all.map{|s| [s.descripcion, s.id]}, {}, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :nombre, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :nombre_egresado, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apellido_paterno, class: 'col-sm-2 control-label'  %>
    <div class="col-sm-10">
    <%= f.text_field :apellido_paterno_egresado, class: 'form-control' %>
  </div>
 </div>

  <div class="form-group">
    <%= f.label :apellido_materno, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-10">
      <%= f.text_field :apellido_materno_egresado, class: 'form-control'  %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :Sexo, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-10"> 
      <% sexos = {'Femenino' => 'F', 'Masculino' => 'M'} %>
      <% lista = sexos.sort %>
      <% lista.each do |sexo| %>
        <div class="radio-inline">
          <%= f.radio_button :sexo_egresado, sexo[1] %>
          <label for="<%= sexo[1] %>"><%= sexo[0] %></label>
        </div>
      <% end %>
    </div>
  </div>


   <div class="form-group">
    <%= f.label :colonia, class: 'col-sm-2 control-label'  %>
     <div class="col-sm-10">
    <%= f.text_area :colonia_egresado, class: 'form-control'  %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :calle, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-10">
    <%= f.text_area :calle_egresado, class: 'form-control'  %>
  </div>
 </div>

   <div class="form-group">
    <%= f.label :codigo_postal, class: 'col-sm-2 control-label'  %>
     <div class="col-sm-10">
    <%= f.text_field :codigo_postal_egresado, class: 'form-control' %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :celular, class: 'col-sm-2 control-label'  %>
     <div class="col-sm-10">
    <%= f.text_field :celular_egresado, class: 'form-control' %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :otro_telefono, class: 'col-sm-2 control-label' %>
     <div class="col-sm-10">
    <%= f.text_field :otro_telefono_egresado, class: 'form-control'  %>
  </div>
  </div>

  <div class="form-group">
    <%= f.label :correo_electronico, class: 'col-sm-2 control-label' %>
     <div class="col-sm-10">
    <%= f.text_field :correo_electronico_egresado, class: 'form-control' %>
  </div>
  </div>

 <div class="form-group">
    <%= f.label :Status, class: 'col-sm-2 control-label'   %>
    <div class="col-sm-10"> 
      <% statuss = {'Si Titulado' => 'Si', 'No Titulado' => 'No'} %>
      <% lista2 = statuss.sort %>
      <% lista2.each do |status| %>
        <div class="radio-inline">
         <%= f.radio_button :status_egresado, status[1] %>
        <label for="<%= status[1] %>"><%= status[0] %></label>
        </div>
      <% end %>
    </div>
  </div>
  
  <br>

  <div class="actions">
     <%= f.submit "Aceptar", :class => 'btn btn-mini btn-info' %>
  </div>
  
<% end %>

</div>

<div class="col-sm-3"></div>
