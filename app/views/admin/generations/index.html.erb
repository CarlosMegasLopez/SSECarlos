<p id="notice"><%= notice %></p>

<h1>Formulario Generaciones</h1>

<%= link_to 'Nueva Generación', new_admin_generation_path, :class => 'btn btn-mini btn-success'  %>

<% if @generations.blank? %>
  <p style="color:red">No hay elementos en la base de datos </p>
<% else %>
  <p style="color:blue">Hay elementos en la base de datos </p>

<table class="generationstable table table-hover table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Carrera</th>
                <th>Descripcion de la Generación</th>
                <th>Opciones</th>
              </tr>
            </thead>
          </tbody>
            <% @generations.each do |e| %>
            <tr>
              <td><%= e.id %></td>
              <td><%= e.career.descripcion %></td>
              <td><%= e.descripcion_generacion %></td>
              <td><%= link_to "Mostrar", admin_generation_path(e), :class => 'btn btn-mini btn-info' %>
                  <%= link_to "Editar", edit_admin_generation_path(e), :class => 'btn btn-mini btn-primary' %>
                  <%= link_to "Eliminar", admin_generation_path(e), :class => 'btn btn-mini btn-danger', method: :delete, data: { confirm: '¿Eliminar Elemento?' } %></td> 

              <!-- para ver el path de editar, mostrar o eliminar, hacer rake routes en la consola -->

            </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
